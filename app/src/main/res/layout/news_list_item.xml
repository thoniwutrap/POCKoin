<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="recyclerModel"
                type="com.mobile.tr.poc.koin.ui.news.presenter.RecyclerModel" />

        <variable
                name="newsViewModel"
                type="com.mobile.tr.poc.koin.ui.news.domain.model.ArticlesItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#000000"
            android:adjustViewBounds="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/cvNews"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:elevation="3dp"
                card_view:cardCornerRadius="1dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <ImageView
                        android:id="@+id/imgBanner"
                        card_view:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"/>


                <TextView

                        android:text="@{newsViewModel.author}"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toBottomOf="@id/imgBanner"
                        android:id="@+id/txtNewsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />

                <TextView
                        android:id="@+id/txtNewsAuthor"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        android:text="@{newsViewModel.title}"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintTop_toBottomOf="@id/imgBanner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>